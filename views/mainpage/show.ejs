<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Dous The Goose</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= post.image %>" alt=""> 
                <div class="caption-full">
                    <h4><a><%=post.name%></a></h4>
                    <p><%= post.description %></p>
                    <p>
                        <em>Submitted By: <%= post.author.username %></em>
                    </p>
                   
                    <a class="btn btn-xs btn-warning" href="/dousthegoose/<%= post._id%>/edit">Edit</a>
                    <form class="delete-form" action="/dousthegoose/<%= post._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-xs btn-danger">Delete</button>
                    </form>
                   
                </div>
            </div> 
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/dousthegoose/<%= post._id %>/comments/new"">Add New Comment</a>
                </div>
                <hr>
                    <% post.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong>Put username here</strong>
                                <span class="pull-right">10 Days Ago</span>
                                <p> 
                                    <%= comment.text %>
                                </p>
                               
                                    <a 
                                        class="btn btn-xs btn-warning" 
                                        href="/dousthegoose/<%=post._id%>/comments/<%=comment._id%>/edit">
                                        Edit
                                    </a>
                                    <form class="delete-form" action="/dousthegoose/<%=post._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                        <input class="btn btn-xs btn-danger" type="submit" value="Delete">
                                    </form>
                                
                            </div>
                        </div>    
                    <% }) %>
            </div>
        </div>
    </div>
</div>





<% include ../partials/footer%>