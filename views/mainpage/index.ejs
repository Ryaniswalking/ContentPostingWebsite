
<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Dous The Goose</h1>
            <p>View this wonderful group of degenerate best friends</p>
            
            <p>
                <a class="btn btn-primary btn-lg" href="/dousthegoose/new">Add a new post</a>
            </p>
        </div>
    </header>

    <div class="row" style="display:flex; flex-wrap: wrap;">
        <% post.forEach(function(post){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= post.image %>">
                    <div class="caption">
                        <h4><%=post.name %></h4>
                    </div>
                    <p>
                        <a class="btn btn-primary" href="/dousthegoose/<%=post._id%>">More Info</a>
                    </p>
                </div>
            </div>
       <% }); %> 
    </div>   
</div> 
 <% include ../partials/footer %>  

